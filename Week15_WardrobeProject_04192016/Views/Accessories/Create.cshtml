@model Week15_WardrobeProject_04192016.Models.Accessory

@{
    ViewBag.Title = "Add Accesory";
}

<h2 class="form-title">Add a New Accessory</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nickname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- drop down list for Accessory Types -->
        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })>
                    <option selected disabled>Select an Accessory Type:</option>
                    <option>Hat</option>
                    <option>Jewelry</option>
                    <option>Belt</option>
                    <option>Scarf</option>
                </select>
            </div>
        </div>

        <!-- drop down list for Colors -->
        <div class="form-group">
            @Html.LabelFor(model => model.Color, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })>
                    <option selected disabled>Select a Color:</option>
                    <option>Multi-colored</option>
                    <option>Red</option>
                    <option>Orange</option>
                    <option>Yellow</option>
                    <option>Green</option>
                    <option>Blue</option>
                    <option>Purple</option>
                    <option>Pink</option>
                    <option>Brown</option>
                    <option>Black</option>
                    <option>White</option>
                    <option>Grey</option>
                    <option>Cream</option>
                    <option>Silver</option>
                    <option>Gold</option>
                </select>
            </div>
        </div>

        <!-- drop down list for Seasons -->
        <div class="form-group">
            @Html.LabelFor(model => model.Season, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select @Html.EditorFor(model => model.Season, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Season, "", new { @class = "text-danger" })>
                    <option selected disabled>Select a Season:</option>
                    <option>Winter</option>
                    <option>Spring</option>
                    <option>Summer</option>
                    <option>Fall</option>
                </select>
            </div>
        </div>

        <!-- drop down list for Occasions -->
        <div class="form-group">
            @Html.LabelFor(model => model.Occ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select @Html.EditorFor(model => model.Occ, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Occ, "", new { @class = "text-danger" })>
                    <option selected disabled>Select an Occasion:</option>
                    <option>Casual</option>
                    <option>Formal</option>
                    <option>Business</option>
                    <option>Social</option>
                </select>
            </div>
        </div>
    </div>

    <div>
        <span class="icon-input-btn"><span class="glyphicon glyphicon-plus-sign"></span> <input type="submit" value="Add Accessory" class="btn btn-default btn-createnew" /> | <button class="btn btn-default btn-backtolist"><span class="glyphicon glyphicon-circle-arrow-left"></span> @Html.ActionLink("Back to List", "Index")</button>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
